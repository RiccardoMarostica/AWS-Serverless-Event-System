{
  "name": "angular-sns-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:analyze": "ng build --configuration production --stats-json && npx webpack-bundle-analyzer dist/angular-sns-frontend/browser/stats.json",
    "build:stats": "ng build --configuration production --stats-json",
    "build:staging": "ng build --configuration staging",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "e2e": "cypress open",
    "e2e:headless": "cypress run",
    "e2e:chrome": "cypress run --browser chrome",
    "e2e:firefox": "cypress run --browser firefox",
    "e2e:edge": "cypress run --browser edge",
    "lint": "ng lint",
    "deploy:build": "npm run build:prod && npm run optimize:assets",
    "deploy": "scripts/deploy.sh",
    "deploy:dev": "scripts/deploy.sh dev",
    "deploy:staging": "scripts/deploy-staging.sh",
    "deploy:prod": "scripts/deploy.sh production",
    "deploy:pipeline": "scripts/pipeline-deploy.sh",
    "deploy:test": "scripts/test-deployment.sh",
    "deploy:verify": "scripts/verify-integration.sh",
    "serve:prod": "ng serve --configuration production",
    "optimize:assets": "node scripts/optimize-assets.js",
    "prebuild:prod": "npm run test:ci",
    "postbuild:prod": "npm run build:stats"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.7",
    "@angular/cdk": "^20.1.6",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/material": "^20.1.6",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.6",
    "@angular/cli": "^20.1.6",
    "@angular/compiler-cli": "^20.1.0",
    "@cypress/schematic": "^4.1.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.0.0",
    "cypress": "^15.0.0",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.2",
    "webpack-bundle-analyzer": "^4.10.1"
  }
}
